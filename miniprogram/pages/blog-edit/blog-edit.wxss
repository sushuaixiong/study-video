.header {
    padding: 20rpx;
}

.content {
    width: 100%;
    height: 360rpx;
    box-sizing: border-box;
}

.footer {
    display: flex;
    position: fixed;
    padding: 20rpx;
    align-items: center;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    color: #f1f1f1;
}

.words-num {
    flex:1;
    text-align: right;
    padding-right: 30rpx;
    font-size: 32rpx;
    color: #474747;
}

.send-btn {
  background-color: #f4ea2a;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}

.icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}
